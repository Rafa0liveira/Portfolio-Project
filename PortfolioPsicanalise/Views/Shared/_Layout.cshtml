<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Spacelab.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PortfolioPsicanalise.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.datatables.net/v/dt/dt-1.13.8/datatables.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Nome do usuário logado -->
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">
                    @if (User.Identity.IsAuthenticated)
                    {
                            <span>@User.Identity.Name</span>
                    }
                    else
                    {
                            <span>Welcome!</span>
                    }
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu principal da Navbar -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Books" asp-action="Index"><i class="bi bi-book"></i> Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Courses" asp-action="Index"><i class="bi bi-folder-check"></i> Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Articles" asp-action="Index"><i class="bi bi-pencil"></i> Articles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Users" asp-action="EditUser"><i class="bi bi-person-badge"></i>User Profile</a>
                        </li>
                       
                    </ul>

                    <!-- Botão Exit alinhado à direita -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-link nav-link text-light" style="padding: 0; border: none; background: none;">
                                    <i class="bi bi-door-open"></i> Exit
                                </button>
                                @Html.AntiForgeryToken() <!-- Inclua o token anti-forgery -->
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-1.13.8/datatables.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/41.1.0/classic/ckeditor.js"></script>

    <script>
      ClassicEditor
        .create( document.querySelector( '#tiny' ) )
        .catch( error => {
            console.error( error );
        } );
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
