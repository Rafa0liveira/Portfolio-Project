@model UsersModel
@{  
    Layout = "_Layout-LoggedOff";
    ViewData["Title"] = "Register a new account";
}
<div class="container bg-primary-subtle p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-dark">@ViewData["Title"]</h1>
    </div>

<form method="post" asp-controller="Users" asp-action="Register">

  <div class="mb-3">
    <label for="Name" class="form-label text-dark">Name</label>
    <input type="text" class="form-control" asp-for="Name" id="Name" placeholder="Full name">
    <span class="text-danger" asp-validation-for="Name"></span>  
</div>

  <div class="mb-3">
    <label for="Email" class="form-label text-dark">Email</label>
    <input type="text" class="form-control" asp-for="Email" id="Email" placeholder="Email address">
    <span class="text-danger" asp-validation-for="Email"></span>
</div>

<div class="mb-3">
    <label for="Password" class="form-label text-dark">Password</label>
    <input type="text" class="form-control" asp-for="PasswordHash" id="PasswordHash" placeholder="Password"> 
    <span class="text-danger" asp-validation-for="PasswordHash"></span>    
</div>

  <div class="d-flex gap-5 mt-5">
    <button type="submit" class="btn btn-success w-50">Save</button>
    <a class="btn btn-primary w-50" asp-controller="Account" asp-action="Login">Back</a>
  </div>


</form>
</div>