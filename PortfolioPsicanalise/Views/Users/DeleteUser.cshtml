@model UsersModel
@{
    ViewData["Title"] = "Delete User";
}

<div class="container bg-primary-subtle p-5 rounded-5" >

    <div class="mb-5 text-center">
        <h1 class=" text-dark ">@ViewData["Title"]</h1>
 </div>
 
 <form method="post" asp-controller="Users" asp-action="DeleteUser">
    <input type="hidden" asp-for="Id"/>


    <h4 class="text-dark text-center">Are you sure you want to delete this user?</h4>

  <div class="mb-3">
    <label for="Book" class="form-label text-dark">Name</label>
    <input type="text" class="form-control" asp-for="Name" id="Name" placeholder="Name of the user" disabled> 
    <span class="text-danger" asp-validation-for="Name"></span>  
</div>

  <div class="mb-3">
    <label for="AuthorName" class="form-label text-dark">Email</label>
    <input type="text" class="form-control" asp-for="Email" id="Email" placeholder="Email address" disabled>
    <span class="text-danger" asp-validation-for="Email"></span>    
</div>

<div class="d-flex gap-5 mt-4">
    <button type="submit" class="btn btn-danger w-50">Delete</button>
    <a class="btn btn-primary w-50" asp-controller="Users" asp-action="Index">Back</a>
  </div>


</form>
</div>