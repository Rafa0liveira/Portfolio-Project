@model ArticlesModel
@{
    ViewData["Title"] = "View Article";
}
<div class="container bg-primary-subtle p-5 rounded-5">
        
     <div class="form-group mb-3 mt-3 text-black" >
                <h3 style="text-align:center"><label>@Html.Raw(Model.Title)</label></h3>
     </div>
     
     <div class="mb-3 mt-3 text-black">
                @Html.Raw(Model.Text)       
    </div>

  <div class="form-group gap-5 mt-5 text-center">
       <a class="btn btn-primary w-10" asp-controller="Articles" asp-action="Index">Back</a>
  </div>


</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
