@using PortfolioPsicanalise.ViewModels;
@model LoginViewModel
@{
    Layout = "_Layout-LoggedOff";
    ViewData["Title"] = "Login";
}
@if (TempData["ErrorMessage"] != null)
{
<div class="alert alert-success text-dark" role="alert">
 @TempData["ErrorMessage"]
</div>
}

<div class="container bg-primary-subtle p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-dark">@ViewData["Title"]</h1>
    </div>

<form method="post" asp-controller="Account" asp-action="Login" method="post">

  
  <div class="mb-3">
    <label for="Email" class="form-label text-dark">Email</label>
    <input type="email" class="form-control" asp-for="Email" id="Email" placeholder="Email address">
    <span class="text-danger" asp-validation-for="Email"></span>    
</div>


    <div class="mb-3">
    <label for="Password" class="form-label text-dark">Password</label>
    <input type="password" class="form-control" asp-for="Password" id="Field" placeholder="Password"> 
    <span class="text-danger" asp-validation-for="Password"></span>    
</div>

  <div class="d-flex gap-5 mt-5">
    <button type="submit" class="btn btn-success w-50">Go</button>
    <a class="btn btn-primary w-50" asp-controller="Home" asp-action="LandingPage">Back</a>
  </div>
  <div class="mb-5 text-center">
  <a  class="btn btn-success mt-5 mx-2 " asp-controller="Users" asp-action="Register"><i class="bi bi-plus-circle"></i> Create new account</a>
  </div>
</form>
</div>

    @section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
 }