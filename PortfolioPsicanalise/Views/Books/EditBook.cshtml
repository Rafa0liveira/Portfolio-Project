@model BooksModel
@{
    ViewData["Title"] = "Edit";
}

<div class="container bg-primary-subtle p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-dark">@ViewData["Title"]</h1>
    </div>

<form method="post" asp-controller="Books" asp-action="EditBook">
    <input type="hidden" asp-for="Id"/>

  <div class="mb-3">
    <label for="Book" class="form-label text-dark">Book Title</label>
    <input type="text" class="form-control" asp-for="Book" id="Book" placeholder="Name of the book">
    <span class="text-danger" asp-validation-for="Book"></span>  
</div>

  <div class="mb-3">
    <label for="AuthorName" class="form-label text-dark">Author</label>
    <input type="text" class="form-control" asp-for="AuthorName" id="AuthorName" placeholder="Name of the Author">
    <span class="text-danger" asp-validation-for="AuthorName"></span>    
</div>


    <div class="mb-3">
    <label for="Field" class="form-label text-dark">Field</label>
    <input type="text" class="form-control" asp-for="Field" id="Field" placeholder="Field of knowledge"> 
    <span class="text-danger" asp-validation-for="Field"></span>    
</div>

  <div class="d-flex gap-5 mt-5">
    <button type="submit" class="btn btn-success w-50">Confirm</button>
    <a class="btn btn-primary w-50" asp-controller="Books" asp-action="Index">Back</a>
  </div>


</form>
</div>

